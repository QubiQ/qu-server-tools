<odoo>

<record id="wizard_user_password_view_form2" model="ir.ui.view">
    <field name="name">Quick User Password Creation</field>
    <field name="model">user.password.wiz</field>
    <field name="arch" type="xml">
        <form string="Set User Password">

            <group col="2" colspan="4" >
                    <label colspan="4" string="Warning! If the user selection is empty it will apply to all users except ADMIN."/>
            </group>

            <group>

                <field name="name"/>
            </group>
            <notebook>
                <page string="Users">
                    <field name="user_ids"/>
                </page>

            </notebook>

            <footer>
                <button name="action_accept"
                        type="object"
                        string="Accept"
                        confirm="Are you sure ?"
                        class="oe_highlight"/>
                or
                <button special="cancel"
                        string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<act_window id="wizard_user_password_action"
            name="User password easy creation"
            res_model="user.password.wiz"
            view_type="form"
            view_mode="form"
            target="new" />

<menuitem id="user_password_menu"
          name="Quick set User Password"
          action="wizard_user_password_action"
          parent="base.menu_users"
          sequence="190"
          groups="base.group_no_one"/>

</odoo>
